@{
    ViewBag.Title = "Wikipedia randomizer";
}

<div class="modal fade" id="divModal" tabindex="-1" role="dialog" aria-labelledby="ModalLable">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" onclick="openCategoryModal(this)" class="btn btn-primary pull-right">Add Category</button>
                <h4 class="modal-title" id="ModalLable">Modal title</h4>
            </div>
            <div class="modal-body">
                <div id="wikiInfo">&nbsp;</div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="divModalCategories" tabindex="-1" role="dialog" aria-labelledby="CategoryModalLable">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="CategoryModalLable">Add category to article</h4>
            </div>
            <div class="modal-body">
                <div class="ui-widget">
                    <label for="inputCategories">Category: </label>
                    <input id="inputCategories">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="btnAddCategory" class="btn btn-primary">Add</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div id="activeArticle"></div>

<div class="jumbotron">
    <h1>Welcome to wikipedia randomizer</h1>
    <p class="lead">Click the button to get a random wikipedia article.</p>
    <button id="btnGetArticle" type="button" class="btn btn-primary " autofocus>Get article!</button>
    <button id="btnClearDB" type="button" class="btn btn-danger ">Clear database</button>
</div>
<div id="divSearchResults" class="row"></div>